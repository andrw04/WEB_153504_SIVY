@{
    ViewBag.Title = "Index";
}

@model SelectList

<main>
        
    <h1>@ViewData["header1"]</h1>
    <h2>Список</h2>
    <ol type="A">
        @for (int i = 0; i < ViewBag.List.Count; i++)
        {
            <li>@ViewBag.List[i]</li>
        }
    </ol>
    <hr />
    <h2>Форма</h2>
    <form method="post">
        <div class="row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <select class="form-select" name="selDemo" asp-items="Model"></select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck1" name="check1">
                    <label class="form-check-label" for="gridCheck1">
                        Чек-бокс 1
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck1" name="check2">
                    <label class="form-check-label" for="gridCheck1">
                        Чек-бокс 2
                    </label>
                </div>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-auto">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                    <label class="form-check-label" for="gridRadios1">
                        Радио-1
                    </label>
                </div>
            </div>
            <div class="col-auto">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                    <label class="form-check-label" for="gridRadios1">
                        Радио-2
                    </label>
                </div>
            </div>
            <div class="col-auto">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option1" checked>
                    <label class="form-check-label" for="gridRadios3">
                        Радио-3
                    </label>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputText1" class="col-sm-2 col-form-label">Логин:</label>
            <div class="col">
                <input type="text" class="form-control" placeholder="Введите имя" aria-label="First name" id="inputText1" name="login">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Пароль</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" placeholder="Введите пароль" id="inputPassword3" name="password">
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>
</main>