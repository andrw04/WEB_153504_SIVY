@model WEB_153504_SIVY.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CarModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarModel.Id" />
            <div class="form-group">
                <label asp-for="CarModel.Name" class="control-label"></label>
                <input asp-for="CarModel.Name" class="form-control" />
                <span asp-validation-for="CarModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModel.Description" class="control-label"></label>
                <input asp-for="CarModel.Description" class="form-control" />
                <span asp-validation-for="CarModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModel.CarBodyId" class="control-label"></label>
                <select asp-for="CarModel.CarBodyId" class="form-control" asp-items="ViewBag.CarBodyId"></select>
                <span asp-validation-for="CarModel.CarBodyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModel.Price" class="control-label"></label>
                <input asp-for="CarModel.Price" class="form-control" />
                <span asp-validation-for="CarModel.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" type="file"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
