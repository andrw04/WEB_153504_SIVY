
@if (SelectedCarModel != null)
{
    <div class="col-md-4 g-5">
        <div class="card" style="width: 18rem">
            <img src="@SelectedCarModel.Image" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@SelectedCarModel.Name</h5>
                <p class="card-text">@SelectedCarModel.Description</p>
                <small class="card-text">Price: @SelectedCarModel.Price</small>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public CarModel? SelectedCarModel { get; set; }
}
